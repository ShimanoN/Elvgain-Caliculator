{
  "name": "elevation-loom",
  "version": "1.0.0",
  "description": "A web application for tracking elevation gain progress with weekly targets",
  "private": true,
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:install": "playwright install",
    "e2e:with-emulators": "node scripts/run-e2e-with-emulators.js",
    "docs:todos": "node scripts/extract_todos.cjs",
    "lint": "eslint js/**/*.ts test/**/*.ts *.config.ts",
    "lint:fix": "eslint js/**/*.ts test/**/*.ts *.config.ts --fix",
    "format": "prettier --write \"js/**/*.ts\" \"test/**/*.ts\" \"*.html\" \"css/**/*.css\" \"*.config.ts\"",
    "format:check": "prettier --check \"js/**/*.ts\" \"test/**/*.ts\" \"*.html\" \"css/**/*.css\" \"*.config.ts\"",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShimanoN/Elevation-Loom.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": "^20.19.0 || ^22.13.0 || >=24.0.0"
  },
  "bugs": {
    "url": "https://github.com/ShimanoN/Elevation-Loom/issues"
  },
  "homepage": "https://github.com/ShimanoN/Elevation-Loom#readme",
  "lint-staged": {
    "js/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "test/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.config.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "e2e/**/*.ts": [
      "prettier --write"
    ],
    "*.{html,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "fake-indexeddb": "^6.2.5",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "firebase": "^12.9.0"
  }
}
