# Firebase Configuration
# These environment variables are required for production deployment
# For development, the app will use demo mode if these are not set

# Firebase API Key
VITE_FIREBASE_API_KEY=your-api-key-here

# Firebase Auth Domain
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# Firebase Project ID
VITE_FIREBASE_PROJECT_ID=your-project-id

# Firebase Storage Bucket
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase Messaging Sender ID
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789

# Firebase App ID
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# Firebase Emulator Configuration (Development only)
# Set to 'true' to use Firebase emulator in development
VITE_USE_FIREBASE_EMULATOR=false

# Firebase Emulator Host (Development only)
VITE_FIREBASE_EMULATOR_HOST=localhost

# Firebase Emulator Port (Development only)
VITE_FIREBASE_EMULATOR_PORT=8080
